<div class="container jumbotron">
  <h4>Logowanie</h4><hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form class="form-signin">
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, placeholder:"Nazwa użytkownika", type:"text", required: true, autofocus: true, class:"form-control" %>
      </div>
      <br>
      <div class="form-group">
        <label>Hasło</label>
        <%= f.text_field :password, placeholder:"Hasło", type:"password", required: true, class:"form-control" %>
      </div>
      <br>
      <%= f.submit "Zaloguj", class:"btn btn-block btn-outline-primary" %>
    </form>
  <% end %>
</div>
